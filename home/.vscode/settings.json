{
  /**************************
   * Core
   **************************/

  "editor.renderLineHighlight": "all",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnPaste": true,
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 14,
  "editor.matchBrackets": "always",
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": true,
  "editor.suggestSelection": "first",
  "editor.accessibilitySupport": "off",
  "editor.wordBasedSuggestions": "off",
  "editor.inlineSuggest.syntaxHighlightingEnabled": true,
  "editor.aiStats.enabled": true,
  "editor.minimap.enabled": false,
  "editor.fontLigatures": false,

  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.activityBar.location": "top",
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.editor.showTabs": "none",

  "window.openFoldersInNewWindow": "on",
  "window.title": "${rootPath}${separator}${activeRepositoryBranchName}${separator}${profileName}",

  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.simpleDialog.enable": true,

  "extensions.ignoreRecommendations": true,

  "security.promptForLocalFileProtocolHandling": false,

  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.suggest.enabled": false,

  "scm.defaultViewMode": "tree",

  "git.autofetch": true,
  "git.confirmSync": false,

  "chat.detectParticipant.enabled": false,
  "chat.checkpoints.showFileChanges": true,
  "chat.tools.terminal.autoApprove": {
    "git commit -em": true,
    "npx tsc": true,
    "npm run build": true,
    "npm run lint": true,
    "pnpm run build": true,
    "grep": true,
    "pnpm test": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm tsc": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm fmt": {
      "approve": true,
      "matchCommandLine": true
    },
    "jq": true,
    "git ls-tree": true,
    "/^pnpm build$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^pnpm install$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^pnpm run -s build$/": {
      "approve": true,
      "matchCommandLine": true
    }
  },
  "chat.useNestedAgentsMdFiles": true,
  "chat.useClaudeSkills": true,
  "chat.instructionsFilesLocations": {
    ".github/instructions": true,
    "/Users/mruzekw/.aitk/instructions/": true
  },

  "diffEditor.ignoreTrimWhitespace": false,

  "typescript.preferences.organizeImports": {},
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  /**************************
   * Extensions
   **************************/

  "eslint.rules.customizations": [],
  "eslint.lintTask.enable": true,

  "prettier.singleQuote": true,

  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  "markdown-preview-github-styles.colorTheme": "light",

  "cSpell.languageSettings": [],
  "cSpell.enabledFileTypes": {
    "*": false
  },
  "cSpell.userWords": [
    "BASEPATH",
    "contentlayer",
    "Liason",
    "Mruzek",
    "Squarespace"
  ],

  "workspace-terminals.switchTerminal": "fromWorkspaceTerminals",

  "yaml.schemas": {
    "file:///Users/mruzekw/.vscode/extensions/continue.continue-1.2.4-darwin-arm64/config-yaml-schema.json": [
      ".continue/**/*.yaml"
    ]
  },

  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Focus on the larger intent of the changes. 'Convert prettier formatting from async to sync' is better than 'Update formatting to use @prettier/sync'. The latter is too literal."
    },
    {
      "text": "Use lots of emojis."
    }
  ],
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "mdx": false
  },

  "nix.enableLanguageServer": true,
  "nix.serverPath": "nil",
  "nix.serverSettings": {
    "nil": {
      "formatting": { "command": ["nixfmt"] }
    }
  },

  // https://github.com/mattpocock/ts-error-translator/blob/main/packages/parser/src/tipInfo.ts
  "totalTypeScript.hiddenTips": [],
  "totalTypeScript.hideBasicTips": true,

  /**************************
   * Language Specific
   **************************/

  "[javascript][javascriptreact][typescriptreact][typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[mdx][markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
